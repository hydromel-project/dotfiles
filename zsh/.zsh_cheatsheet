  echo -e "${_CHEAT_CYAN}â•‘${_CHEAT_RESET}${_CHEAT_BOLD}                    KEYBOARD SHORTCUTS                              ${_CHEAT_RESET}${_CHEAT_CYAN}â•‘${_CHEAT_RESET}"
