# ============================================================================
# Interactive Cheat Sheet System
# Quick-access help for all commands and keystrokes
# ============================================================================

# Color definitions
_CHEAT_BOLD='\033[1m'
_CHEAT_DIM='\033[2m'
_CHEAT_BLUE='\033[1;34m'
_CHEAT_CYAN='\033[1;36m'
_CHEAT_GREEN='\033[1;32m'
_CHEAT_YELLOW='\033[1;33m'
_CHEAT_MAGENTA='\033[1;35m'
_CHEAT_RED='\033[1;31m'
_CHEAT_RESET='\033[0m'

# ============================================================================
# Helper Functions
# ============================================================================

_cheat_header() {
  local title="$1"
  local width=67
  local title_len=${#title}
  local padding=$(( (width - title_len) / 2 ))
  local padded_title=$(printf "%${padding}s%s%${padding}s" "" "$title" "")

  echo -e "${_CHEAT_CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${_CHEAT_RESET}"
  echo -e "${_CHEAT_CYAN}â•‘${_CHEAT_RESET}${_CHEAT_BOLD}$(printf '%-67s' "$padded_title")${_CHEAT_RESET}${_CHEAT_CYAN}â•‘${_CHEAT_RESET}"
  echo -e "${_CHEAT_CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${_CHEAT_RESET}"
  echo ""
}

_cheat_section() {
  local title="$1"
  echo -e "${_CHEAT_YELLOW}â”â”â” ${title} $(printf 'â”%.0s' {1..67} | cut -c1-$((67 - ${#title} - 5)))${_CHEAT_RESET}"
  echo ""
}

_cheat_cmd() {
  local cmd="$1"
  local desc="$2"
  printf "  ${_CHEAT_GREEN}%-18s${_CHEAT_RESET} %s\n" "$cmd" "$desc"
}

# ============================================================================
# Cheat Sheet Data
# ============================================================================

