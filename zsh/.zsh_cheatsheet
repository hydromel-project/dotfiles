# ============================================================================
# Interactive Cheat Sheet Viewer
# ============================================================================

cheat() {
  local topic="${1:-menu}"

  case "$topic" in
    menu)
      _cheat_interactive_menu
      ;;
    keys|keyboard|shortcuts)
      _cheatsheet_keyboard | less -R
      ;;
    commands|cmd)
      _cheatsheet_commands | less -R
      ;;
    git)
      _cheatsheet_git | less -R
      ;;
    nav|navigation|cd)
      _cheatsheet_nav | less -R
      ;;
    fzf|fuzzy)
      _cheatsheet_fzf | less -R
      ;;
    search)
      _cheat_search "$2"
      ;;
    *)
      echo "Usage: cheat [topic]"
      echo ""
      echo "Topics:"
      echo "  menu        Interactive menu (default)"
      echo "  keys        Keyboard shortcuts"
      echo "  commands    All commands"
      echo "  git         Git cheat sheet"
      echo "  nav         Navigation"
      echo "  fzf         FZF usage guide"
      echo "  search      Search all cheat sheets"
      ;;
  esac
}

_cheat_interactive_menu() {
  if [[ $_HAS_FZF -ne 1 ]]; then
    echo "FZF not installed. Showing keyboard shortcuts:"
    _cheatsheet_keyboard | less -R
    return
  fi

  local choice=$(cat << 'EOF' | fzf --height 40% --reverse --prompt="Cheat Sheet: " --header="Choose a topic"
ğŸ¹ Keyboard Shortcuts
ğŸ“œ All Commands
ğŸŒ³ Git Commands
ğŸ§­ Navigation
ğŸ” FZF Usage Guide
ğŸ” Search All Sheets
EOF
)

  case "$choice" in
    *Keyboard*)
      _cheatsheet_keyboard | less -R
      ;;
    *All\ Commands*)
      _cheatsheet_commands | less -R
      ;;
    *Git*)
      _cheatsheet_git | less -R
      ;;
    *Navigation*)
      _cheatsheet_nav | less -R
      ;;
    *FZF*)
      _cheatsheet_fzf | less -R
      ;;
    *Search*)
      _cheat_search
      ;;
  esac
}

_cheat_search() {
  local query="$1"

  if [[ $_HAS_FZF -ne 1 ]]; then
    echo "FZF not installed for search. Use: cheat <topic>"
    return 1
  fi

  # Combine all cheat sheets
  local all_sheets=$(
    echo "=== KEYBOARD SHORTCUTS ===" && _cheatsheet_keyboard
    echo ""
    echo "=== ALL COMMANDS ===" && _cheatsheet_commands
    echo ""
    echo "=== GIT ===" && _cheatsheet_git
    echo ""
    echo "=== NAVIGATION ===" && _cheatsheet_nav
    echo ""
    echo "=== FZF ===" && _cheatsheet_fzf
  )

  if [[ -n "$query" ]]; then
    echo "$all_sheets" | grep -i "$query" | less -R
  else
    echo "$all_sheets" | fzf --preview-window=up:70% | less -R
  fi
}

# Quick access alias
alias help='cheat'
alias shortcuts='cheat keys'

# Bind F1 to show cheat sheet
bindkey -s '^[OP' 'cheat\n'  # F1
